# ==============================================
# DATENBANK KONFIGURATION
# ==============================================

# PostgreSQL (empfohlen für Entwicklung)
DATABASE_URL="postgresql://postgres:password@localhost:5432/trezo_crm?schema=public"

# MySQL (für Hostinger Production)
# DATABASE_URL="mysql://u123456789_user:password@127.0.0.1:3306/u123456789_trezo?ssl-mode=REQUIRED"

# ==============================================
# NEXT.JS KONFIGURATION
# ==============================================

# App URL (wichtig für Links und Redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# OPTIONAL: AUTHENTIFIZIERUNG (für später)
# ==============================================

# NextAuth Secret (generiere mit: openssl rand -base64 32)
# NEXTAUTH_SECRET="your-secret-key-here"
# NEXTAUTH_URL="http://localhost:3000"

# ==============================================
# OPTIONAL: EMAIL SERVICE
# ==============================================

# SMTP für Benachrichtigungen
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
